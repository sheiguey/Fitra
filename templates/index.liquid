{% assign mainProduct = all_products['fitra-activity-band'] %}

<div class="main-product">
    <div id="product-images" class="product-images">
        {% for image in mainProduct.images %}
        <div class="single-product-image">
            <img alt="{{ image.alt }}" src="{{ image |  image_url}}" width="100%" height="" />
        </div>
        {% endfor %}
    </div>
    <div class="product-info">
        <h1>{{mainProduct.title}}</h1>
        <div class="meta-data">
            <div class="head-line">
                <h2>{{ 'general.product.copy.headline' | t}}</h2>
                <div class="details">
                    <ul>
                        <li>{{ 'general.product.details_list.item1' | t}}</li>
                        <li>{{ 'general.product.details_list.item2' | t}}</li>
                    </ul>
                </div>
            </div>
 
            <div class="description">
                <div class="description-header">
                    <h3>{{'general.product.copy.description_headline' | t}}</h3>
                    <p>{{mainProduct.description}}</p>
                </div>

                <div class="form-wrapper">
                    {% form 'product', mainProduct %}
                    <label for="SelectedVariant">{{mainProduct.options.first}}</label>
                    <select id="SelectedVariant" name="id">
                        {% for variant in mainProduct.variants %}
                        <option value="{{ variant.id }}" >
                            {{variant.title}}
                        </option>

                     {% comment %}     {% if variant.available %}
                        <option value="{{ variant.id }}" {% if variant==current_variant %}selected="selected" {% endif
                            %}>
                            {{ variant.title }} - {{ variant.price | money }}
                        </option>
                        {% else %}
                        <option disabled="disabled">
                            {{variant.title}} - sold out
                        </option>
                        {% endif %} {% endcomment %}
                        {% endfor %}
                    </select>
                    <button type="submit" name="add" id="AddToCart">
                        {{ 'general.product.form.submit' | t}}
                        <span class="product-price">{{mainProduct.price | money_without_trailing_zeros}}</span>
                    </button>
                    {% endform %}
                </div>

            </div>
        </div>
    </div>

</div>